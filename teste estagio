# Questão 1
INDICE = 13
SOMA = 0
K = 0

while K < INDICE:
    K = K + 1
    SOMA = SOMA + K

print(SOMA)  # Saída: 91

# Questão 2
def fibonacci(num):
    a, b = 0, 1
    while a < num:
        if a == num:
            return True
        a, b = b, a + b
    return False

numero = 21  # Número a ser verificado na sequência de Fibonacci
if fibonacci(numero):
    print(f'O número {numero} pertence à sequência de Fibonacci.')
else:
    print(f'O número {numero} não pertence à sequência de Fibonacci.')

